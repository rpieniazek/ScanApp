<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/boot_camp_logo"/>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@drawable/crazy_barcode" />

    <TextView android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="ScanApp"
        android:textColor="#137bab"
        android:textSize="@android:dimen/notification_large_icon_height"
        android:textAlignment="center"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:src="@drawable/best_logo"
        android:layout_gravity="right"/>

</LinearLayout>